<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1B381"
    tools:context=".Youtube">

    <androidx.cardview.widget.CardView
        android:id="@+id/youtube_card"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:background="#eddea4"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/youtuub" />

            <TextView
                android:id="@+id/Followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:text="Followers"
                android:textColor="#573B0C"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Followers_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/Followers"
                android:layout_weight="1"
                android:background="#454545"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Toplikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Followers"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:text="Top Likes"
                android:textColor="#573B0C"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Toplikes_Count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Followers_count"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/Toplikes"
                android:layout_weight="1"
                android:background="#454545"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Toplikes"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:text="Ranking"
                android:textColor="#573B0C"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Ranking_Count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Toplikes_Count"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/Ranking"
                android:layout_weight="1"
                android:background="#454545"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Growth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ranking"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:text="Growth"
                android:textColor="#573B0C"
                android:textSize="24sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>